scope dh el model name
local: true hay5aly el form te3mel http post request 3ady msh ajax reqest
%>
<%= form_with scope: @article, url: articles_path, local: true do |f| %>
  <p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Save Article" %>
  </p>
<% end %>

